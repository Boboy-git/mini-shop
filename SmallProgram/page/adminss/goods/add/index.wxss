/* page/adminss/address/add/index.wxss */

.top_avatar{
    height: 150rpx;
    line-height: 150rpx;
    text-align: right;
    border-top: 3px solid #f3f3f3;
    border-bottom: 10px solid #f3f3f3;
}
.top_avatar text{
    position: absolute;
    top: 0rpx;
    left: 5%;
    float: left;
}
.top_avatar image{
    width:100rpx;
    height:100rpx;
    margin-top: 25rpx;
	margin-right: 25rpx;
    border-radius: 100rpx;
}
.bindPhone{
    border-top: 10px solid #f3f3f3!important;
}
.menulist{
    min-height: 100rpx;
    line-height: 100rpx;
    border-top: 1px solid #f3f3f3;
}
.menulist text{
    margin-left: 5%;
    display: block;
    width: 25%;
    float: left;
    
}
.menulist input{
    float: left;
    width: 68%;
    vertical-align:middle;
    height: 70rpx;
    margin-top: 15rpx;
}
.menulist image{
    width: 2%;
    padding-bottom: 1%;
    margin-left: 60%;
    vertical-align: middle;
}
.live_photo{
	width: 100%;	
}
.live_photo image{
	width:200rpx;
	height: 200rpx;	
	margin: 10rpx;
}


/*确认按钮*/
.confirm {
	background: #4cd964;
	color: white;
	margin: 10px;
	flex: 1;
}

/*删除按钮*/
.delete {
	background: #da634f;
	color: white;
	margin: 10px;
	flex: 1;
}

.buttons {
	display: flex;
	flex-direction: row;
}
.textarea_view{
	width: 90%;
	margin: 20rpx 2% 20rpx 2%;
	border: 1px solid #eee;
	border-radius: 10rpx;
	padding: 20rpx;
	color: #333;
	font-size: 26rpx;
	
}

.shuliangimg{
	position: relative!important;
	overflow:visible;
}

.shuliang{
	background:linear-gradient(360deg,rgba(239,41,52,1) 0%,rgba(255,96,105,1) 100%);
	color: #fff!important;
	min-width:28rpx;
	height: 28rpx!important;
	line-height: 30rpx!important;
	text-align: center;
	display: inline-block;
	position:absolute;
	top:0;
	right: 0;
	border-radius: 100rpx;
	padding: 3rpx;
	font-size: 20rpx;
}