	<view class='menu_item_img'>
		<image src="/images/plan.png" mode="widthFix"></image>
	</view>
    <view class='myplan'>订单管理</view>
	<view class='right_view'>
		<image src="/images/more.png" mode="widthFix"></image>
	</view>
	<image src="/images/more.png" mode="widthFix"></image>
</view>
</navigator>
<view class='menulist' bindtap='showAddressMenu'>
